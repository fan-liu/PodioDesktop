<Window x:Class="PodioDesktop.LogInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PODIO LogIn" Height="300" Width="300" Icon="Resource\podio.ico">

    <Grid Background="AliceBlue" FocusManager.FocusedElement="{Binding ElementName=Email}">
        <Label Content="Email Address:" HorizontalAlignment="Left" Margin="33,27,0,0" VerticalAlignment="Top"/>
        <Label Content="Password:" HorizontalAlignment="Left" Margin="33,113,0,0" VerticalAlignment="Top"/>
        <TextBox Name="Email" HorizontalAlignment="Left" Margin="33,68,0,0" VerticalAlignment="Top" Width="226" Height="25"/>
        <PasswordBox Name="PW" HorizontalAlignment="Left" Margin="33,158,0,0" VerticalAlignment="Top" Width="226" Height="25"/>
        <Button Content="LogIn" HorizontalAlignment="Left" Margin="42,216,0,0" VerticalAlignment="Top" Width="75" Click="LogIn_Click" ToolTip="Come on, log me in."/>
        <Button Content="Cancel" HorizontalAlignment="Left" Margin="166,216,0,0" VerticalAlignment="Top" Width="75" Click="Cancel_Click" ToolTip="You sure you wanna cancel me?"/>

    </Grid>
</Window>
